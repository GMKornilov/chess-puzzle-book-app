<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/list"
    android:name="com.github.gmkornilov.chess_puzzle_book.ui.TaskListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="LinearLayoutManager"
    tools:context=".ui.puzzle_list.PuzzleListFragment"
    tools:listitem="@layout/fragment_puzzle_list"
    tools:visibility="visible"/>
<TextView
    android:id="@+id/noTaskText"
    android:layout_gravity="center"
    android:gravity="center"
    android:textSize="20sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:visibility="gone"
    android:text="@string/no_tasks_were_generated"/>
</FrameLayout>